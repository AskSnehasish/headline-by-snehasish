<section class="gh-topic gh-topic-grid">
    <section class="gh-pagehead">
                    <h2 class="gh-pagehead-title">{{name}}</h2>

                    {{#if description}}
                        <div class="gh-pagehead-description">{{description}}</div>
                    {{/if}}
                </section>

    <div class="gh-topic-content">
        {{#get "posts" include="tags,authors" filter="tag:{{slug}}+featured:false" limit="7"}}
        {{#foreach posts}}
        {{> "loop-grid"}}
        {{/foreach}}
        {{/get}}
    </div>

    <footer class="gh-topic-footer">
        <a class="gh-topic-link" href="{{url}}">Show more {{> "icons/arrow"}}</a>
    </footer>
</section>